---
import { Icon } from "astro-icon/components";

interface Props {
  icon: string;
  href: string;
  username: string;
}

const { icon, href, username } = Astro.props;
---

<li class="dark:hover:text-zinc-200 hover:text-zinc-700">
  <a class="inline-flex gap-2 items-baseline group" href={href}
    ><Icon name={icon} />{username}<Icon
      name="external-link"
      class="-ml-1 opacity-0 group-hover:opacity-100"
    /></a
  >
</li>
